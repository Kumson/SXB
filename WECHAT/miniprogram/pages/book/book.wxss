.container{
    background:#fff
}
.ar_picker{
    width:100%;
    font-size:30rpx;
    color:#000;
    background: #efeff4;
    margin:0;
}
.ar_picker .ar_picker_wrap{
    width: 670rpx;
    background: #fff url(../../images/arrow.png) no-repeat right center;
    background-size:25rpx 14rpx;
    background-position:650rpx;
    border-radius:20rpx;
    padding:20rpx;
    margin:20rpx auto;
}


.form_blank{
  margin-bottom: 14%;
}
.form_group{
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    margin:8%;
    font-size: 88%;
    font-weight: 600;
    line-height: 172%;
    color:#000;
    margin-top: 8%;
      }
.form_group text{
    
    width:-4%;
    color: #000
}

.form_group input,
.form_group picker{
    width:460rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
    height:60rpx;
    line-height: 60rpx;
    padding:0rpx 20rpx;
}
.form_group .sendmsg_input{
    width:280rpx;
    margin-right:14rpx;
}

.placeholder_style{
    font-family:'微软雅黑';
    color:#adadad;

}

.ar_cont{
    padding:3% ;
    font-size:80%;
    background: #fff;
    margin-bottom:-12%;
    line-height: 160%;
    color:#666666;
    margin-top: 10%;
    margin-left: 5%;
}
.ar_cont .ar_cont_h1{
    font-size: 110%;
    font-weight: 600;
    line-height: 200%;
    color:#000;
    margin: -4%;
    
}
.ar_date_time{
    width:86%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin:-1%;
    margin-top: -9%;
    margin-bottom: 15%;
    margin-left: 9%;
}
.ar_date_time .ar_date,
.ar_date_time .ar_time{
    width:47%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.ar_date_time picker{
    width:180rpx;
    border:1px solid #ddd;
    border-radius:8%;
    padding:3% 5%;
    margin-left:68rpx;
    height: 46rpx;
}
.input_msg{
    border:1px solid #ddd; 
    border-radius:8rpx;
    padding:0rpx 10rpx;
}
